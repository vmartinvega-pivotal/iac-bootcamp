pipeline {
  agent {
    kubernetes {
      label 'terraform-deploy'  // all your pods will be named with this prefix, followed by a unique id
      idleMinutes 5  // how long the pod will live after no jobs have run on it
      yamlFile 'pods/terraform-pod.yml'  // path to the pod definition relative to the root of our project 
    }
  }
  stages {
    stage('Deploy Instance to AWS') {
      environment {
        K8S_CREDS = credentials('sa_k8s')  // A jenkins credentials (username/password) is expected in jenkins (craete it before running)
      }
      steps {
        container('terraform') {  
          sh "cd terraform && terraform init"
        }
      }
    }
  }
}