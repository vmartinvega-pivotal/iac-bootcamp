pipeline {
  agent {
    kubernetes {
      label 'ansible-deploy'  // all your pods will be named with this prefix, followed by a unique id
      idleMinutes 5  // how long the pod will live after no jobs have run on it
      yamlFile 'deploy-pod.yml'  // path to the pod definition relative to the root of our project 
    }
  }
  stages {
    stage('Deploy Wiremock to 8ks') {
      steps {
        container('ansible') {  
          sh "ansible-playbook -i 127.0.0.1, deploy-wiremock.yml"
        }
      }
    }
  }
}